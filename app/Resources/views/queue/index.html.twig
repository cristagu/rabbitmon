{% extends 'base.html.twig' %}

{% block body %}
    <h1>Queues list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Vhost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for queue in queues %}
            <tr>
                <td><a href="{{ path('queue_show', { 'id': queue.id }) }}">{{ queue.id }}</a></td>
                <td>{{ queue.name }}</td>
                <td>{{ queue.vhost }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('queue_show', { 'id': queue.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('queue_edit', { 'id': queue.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('queue_new') }}">Create a new queue</a>
        </li>
    </ul>
{% endblock %}
